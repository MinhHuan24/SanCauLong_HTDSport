@{
    ViewBag.Title = "Đặt Sân";
}

@model SanCauLong.Models.SanCauLong

<style>
    .booking-container {
        max-width: 600px;
        margin: 2rem auto;
        padding: 2rem;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        font-family: Arial, sans-serif;
        color: #333;
    }

    h2 {
        text-align: center;
        color: #c0392b;
        margin-bottom: 1.5rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    label {
        font-weight: bold;
        color: #333;
    }

    input[type="date"],
    input[type="datetime-local"] {
        width: 100%;
        padding: 0.5rem;
        font-size: 1rem;
        border: 1px solid #ddd;
        border-radius: 5px;
        margin-top: 0.5rem;
    }

    .btn-back, .btn-submit {
        display: inline-block;
        margin-top: 1rem;
        padding: 0.6rem 1.2rem;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.3s, transform 0.2s;
        cursor: pointer;
    }

    .btn-back {
        background-color: #c0392b;
        color: white;
        margin-right: 10px;
    }

        .btn-back:hover {
            background-color: #a93226;
            transform: scale(1.05);
        }

    .btn-submit {
        background-color: #27ae60;
        color: white;
    }

        .btn-submit:hover {
            background-color: #1e8449;
            transform: scale(1.05);
        }
</style>

<div class="booking-container">
    <h2>Đặt Sân: @Model.TenSan</h2>

    @using (Html.BeginForm("DatSan", "San", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.MaSan)

        <div class="form-group">
            <label>Ngày Đặt:</label>
            @Html.TextBox("NgayDat", DateTime.Now.ToString("yyyy-MM-dd"), new { type = "date" })
        </div>

        <div class="form-group">
            <label>Thời Gian Bắt Đầu:</label>
            @Html.TextBox("ThoiGianBatDau", DateTime.Now.ToString("yyyy-MM-dd HH:mm"), new { type = "datetime-local" })
        </div>

        <div class="form-group">
            <label>Thời Gian Kết Thúc:</label>
            @Html.TextBox("ThoiGianKetThuc", DateTime.Now.AddHours(1).ToString("yyyy-MM-dd HH:mm"), new { type = "datetime-local" })
        </div>

        <a href="@Url.Action("DanhSachSan", "San")" class="btn-back">Quay lại Danh Sách Sân</a>
        <button type="submit" class="btn-submit">Đặt Sân</button>
    }
</div>
