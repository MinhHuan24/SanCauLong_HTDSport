<div class="court-detail-container">
    <h1 class="court-detail-header">@Model.TenSan</h1>
    <img src="@Url.Content(Model.Img)" alt="@Model.TenSan" class="court-img" />

    <div class="court-info">
        <p><strong>Địa chỉ:</strong> @Model.DiaChi</p>
        <p><strong>Giá:</strong> @Model.GiaTien VND/Giờ</p>
        <p><strong>Trạng thái:</strong> @Model.TrangThai</p>
        <p><strong>Rating:</strong> @Model.Rating</p>
    </div>

    <a href="@Url.Action("DatSan", "San", new { maSan = Model.MaSan })" class="btn-book">Đặt Sân Ngay</a>
    <a href="@Url.Action("DanhSachSan", "San")" class="btn-back">Quay lại Danh Sách Sân</a>
</div>
