@model SanCauLong.Models.SanCauLong

@{
    ViewBag.Title = "Chi Tiết Sân";
}

<style>
    .court-detail-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 1rem;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        font-family: Arial, sans-serif;
        color: #333;
    }

    .court-detail-header {
        text-align: center;
        color: #c0392b;
    }

    .court-img {
        width: 100%;
        height: auto;
        border-radius: 10px;
    }

    .court-info {
        margin-top: 1rem;
        line-height: 1.6;
    }

    .btn-back, .btn-book {
        display: inline-block;
        margin-top: 1rem;
        padding: 0.6rem 1.2rem;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.3s, transform 0.2s;
    }

    .btn-book {
        background-color: #27ae60;
        color: white;
        margin-right: 10px;
    }

    .btn-book:hover {
        background-color: #1e8449;
        transform: scale(1.05);
    }

    .btn-back {
        background-color: #c0392b;
        color: white;
    }

    .btn-back:hover {
        background-color: #a93226;
        transform: scale(1.05);
    }
