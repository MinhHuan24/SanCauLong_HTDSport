@model SanCauLong.Models.SanCauLong
<style>
    .payment-container {
        max-width: 500px;
        margin: 2rem auto;
        padding: 1.5rem;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        font-family: Arial, sans-serif;
    }

    .qr-code {
        width: 200px;
        height: 200px;
        margin-top: 1rem;
        margin-bottom: 1.5rem;
    }

    .btn-confirm {
        background-color: #27ae60;
        color: #fff;
        padding: 0.7rem 1.5rem;
        border: none;
        border-radius: 5px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.2s;
    }

        .btn-confirm:hover {
            background-color: #1e8449;
            transform: scale(1.05);
        }

    .btn-back {
        display: inline-block;
        margin-top: 1rem;
        background-color: #c0392b;
        color: #fff;
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.3s, transform 0.2s;
    }

        .btn-back:hover {
            background-color: #a93226;
            transform: scale(1.05);
        }
</style>

<div class="payment-container">
    <h2>Thanh Toán Trước Cho Sân: @Model.TenSan</h2>
    <p>Số tiền cần thanh toán: <strong>@ViewBag.SoTien VND</strong></p>
    <img src="@Url.Content(ViewBag.QRCodeImage)" alt="QR Code" class="qr-code" />

    <form action="@Url.Action("XacNhanThanhToan", "San")" method="post">
        @Html.HiddenFor(m => m.MaSan)
        <button type="submit" class="btn-confirm">Đã Chuyển Khoản</button>
    </form>
    <a href="@Url.Action("DanhSachSan", "San")" class="btn-back">Quay lại Danh Sách Sân</a>
</div>

